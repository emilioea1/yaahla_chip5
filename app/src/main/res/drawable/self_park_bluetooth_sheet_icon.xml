<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="200dp" android:height="50dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#2E86EB"/>
            <corners android:radius="100dp"/>
        </shape>
    </item>
    <item android:width="50dp" android:height="50dp" android:gravity="right">
        <bitmap
            android:src="@drawable/self_park" />
    </item>
    <item android:width="30dp" android:height="30dp" android:gravity="center_vertical|end"
        android:end="45dp">
        <bitmap
            android:src="@drawable/icons8_bluetooth_filled_100" />
    </item>
</layer-list>